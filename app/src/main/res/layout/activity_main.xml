<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bodor.com.submitbutton.MainActivity">

    <com.spark.submitbutton.SubmitButton
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Submit"
        app:sub_btn_line_color="@android:color/holo_blue_dark"
        app:sub_btn_background="@android:color/holo_orange_dark"
        app:sub_btn_duration="500"
        app:sub_btn_ripple_color="@android:color/holo_red_light"
        app:sub_btn_tick_color="@android:color/holo_blue_light"
        />

</RelativeLayout>
